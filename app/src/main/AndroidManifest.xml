<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mastermind.mastermind">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.menu.ItemImageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.statistic.StatisticGameActivity"
            android:label="Statystyki"
            android:parentActivityName=".activities.menu.ItemImageActivity" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.game.GameVariantActivity"
            android:label="@string/title_activity_game_variant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.game.user.MainGameActivity"
            android:label="@string/title_activity_main_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.game.EndGameActivity"
            android:label="@string/title_activity_end_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.game.AttemptActivity"
            android:label="@string/proby" />
        <activity
            android:name=".activities.game.genetic.GeneticActivity"
            android:label="@string/title_activity_genetic" />
        <activity
            android:name=".activities.game.TestActivity"
            android:label="@string/Test" />
    </application>

</manifest>