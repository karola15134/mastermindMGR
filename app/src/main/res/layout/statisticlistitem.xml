<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="98dp"
        android:layout_height="43dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/colorsCountTxt"
        android:layout_width="91dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/dateTxt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/attemptsCountTxt"
        android:layout_width="59dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/colorsCountTxt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/typeOfSolution"
        android:layout_width="78dp"
        android:layout_height="43dp"
        android:layout_marginStart="6dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/attemptsCountTxt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />
</android.support.constraint.ConstraintLayout>